FROM python:3.13-slim

WORKDIR /app

# uv 설치
RUN pip install --no-cache-dir uv

# 의존성 복사 & 설치
COPY requirements/api-server.txt ./requirements/
RUN uv pip install --system -r requirements/api-server.txt

# 소스 복사
COPY . .

# FastAPI 포트
EXPOSE 8000

CMD ["uvicorn", "OnPyRunner.api.app:app", "--host", "0.0.0.0", "--port", "8000"]
